<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--头部-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/base_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/skyblue"
            android:navigationContentDescription="back">

            <ImageView
                android:id="@+id/base_nav_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dangan_left_margin"
                android:paddingRight="@dimen/dangan_right_margin"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/base_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/title_chitang_xiaodu"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/base_nav_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:textColor="@color/colorWhite"
                android:visibility="visible" />
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/document_item0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_margin"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_item0_label"
                android:layout_width="@dimen/dangan_label_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:text="档案名称"
                android:textSize="@dimen/label_size" />

            <EditText
                android:id="@+id/document_item0_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/document_item0_label" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/document_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_margin"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_item1_label"
                android:layout_width="@dimen/dangan_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:textSize="@dimen/label_size" />

            <EditText
                android:id="@+id/document_item1_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/document_item1_label"
                android:clickable="true"
                android:cursorVisible="false"
                android:editable="false"
                android:textSize="@dimen/label_size" />

            <ImageView
                android:id="@+id/document_item1_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:src="@drawable/arrow_chose"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/document_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_margin"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_item2_label"
                android:layout_width="@dimen/dangan_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:gravity="center_vertical"
                android:textSize="@dimen/label_size" />

            <EditText
                android:id="@+id/document_item2_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/document_item2_label" />

            <ImageView
                android:id="@+id/document_item2_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:src="@drawable/arrow_chose"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/take_picture"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:background="@drawable/take_picture"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/document_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_margin"
            android:background="@color/colorWhite"
            android:descendantFocusability="beforeDescendants"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_item3_label"
                android:layout_width="@dimen/dangan_label_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:textSize="@dimen/label_size" />

            <EditText
                android:id="@+id/document_item3_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/document_item3_label"
                />

            <ImageView
                android:id="@+id/document_item3_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:src="@drawable/arrow_chose"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/document_item4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_margin"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_item4_label"
                android:layout_width="@dimen/dangan_label_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:textSize="@dimen/label_size" />

            <EditText
                android:id="@+id/document_item4_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/document_item4_label" />

            <ImageView
                android:id="@+id/document_item4_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:src="@drawable/arrow_chose"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/document_item5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_margin"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_item5_label"
                android:layout_width="@dimen/dangan_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:textSize="@dimen/label_size" />

            <EditText
                android:id="@+id/document_item5_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/document_item5_label" />

            <ImageView
                android:id="@+id/document_item5_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:src="@drawable/arrow_chose"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_margin"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_operator_label"
                android:layout_width="@dimen/dangan_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:text="@string/label_chitang_xiaoduopera"
                android:textSize="@dimen/label_size" />

            <EditText
                android:id="@+id/document_operator_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/document_operator_label"
                android:hint="@string/hint_chitang_operator" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_big_margin"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_media_label"
                android:layout_width="@dimen/dangan_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:text="@string/label_chitang_tupian"
                android:textSize="@dimen/label_size" />

            <EditText
                android:id="@+id/document_media_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/document_media_label"
                android:enabled="false"
                android:hint="@string/hint_chitang_tupian" />

            <ImageView
                android:id="@+id/document_media_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:clickable="true"
                android:src="@drawable/add_item" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/upload_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_margin"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/preview_img1"
                android:layout_width="@dimen/dangan_preview_img_wide"
                android:layout_height="@dimen/dangan_preview_img_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:layout_marginRight="@dimen/dangan_right_margin" />

            <ImageView
                android:id="@+id/preview_img2"
                android:layout_width="@dimen/dangan_preview_img_wide"
                android:layout_height="@dimen/dangan_preview_img_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin" />

            <ImageView
                android:id="@+id/preview_img3"
                android:layout_width="@dimen/dangan_preview_img_wide"
                android:layout_height="@dimen/dangan_preview_img_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin" />

            <ImageView
                android:id="@+id/preview_img4"
                android:layout_width="@dimen/dangan_preview_img_wide"
                android:layout_height="@dimen/dangan_preview_img_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dangan_right_margin" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dangan_item_top_big_margin"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_note_label"
                android:layout_width="@dimen/dangan_label_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:text="@string/label_chitang_note"
                android:textSize="@dimen/label_size" />

            <EditText
                android:id="@+id/document_note_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/document_note_label"
                android:hint="@string/hint_chitang_note"
                android:textColorHighlight="@color/colorAccent" />
        </RelativeLayout>

        <Button
            android:id="@+id/adddocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dangan_left_margin"
            android:layout_marginRight="@dimen/dangan_right_margin"
            android:layout_marginTop="@dimen/dangan_item_top_big_margin"
            android:background="@color/skyblue"
            android:text="@string/title_add" />
    </LinearLayout>
</ScrollView>