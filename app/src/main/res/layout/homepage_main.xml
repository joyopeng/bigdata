<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <!--头部-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/base_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/skyblue"
        android:navigationContentDescription="back">

        <ImageView
            android:id="@+id/base_nav_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:src="@drawable/back"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/base_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_title"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/base_nav_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_item"
            android:clickable="true"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>

    <!--app:point_layout="center" 指定小圆点位置（center或者right）-->
    <com.kcode.autoscrollviewpager.view.AutoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorWhite"
        android:padding="@dimen/dangan_right_margin"
        app:point_layout="center">
    </com.kcode.autoscrollviewpager.view.AutoScrollViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dangan_right_margin"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:text="@string/homepage_text_chitang"
                android:gravity="center_vertical"
                android:textSize="@dimen/title_size"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/homepage_fragment_icon_leftmergin"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:layout_gravity="center"
                android:src="@drawable/chitanggaikuang" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_marginLeft="@dimen/dangan_item_top_margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/homepage_text_dangan"
                android:textSize="@dimen/title_size"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:layout_marginLeft="@dimen/homepage_fragment_icon_leftmergin"
                android:layout_gravity="center"
                android:src="@drawable/danganguanli" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dangan_left_margin"
                android:layout_gravity="center"
                android:text="@string/homepage_text_tianjiadangan"
                android:textSize="@dimen/title_size"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:layout_marginLeft="@dimen/homepage_fragment_icon_leftmergin"
                android:layout_gravity="center"
                android:src="@drawable/tianjiadangan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_marginLeft="@dimen/dangan_item_top_margin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/homepage_text_qrcode"
                android:textSize="@dimen/title_size"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dangan_right_margin"
                android:layout_marginLeft="@dimen/homepage_fragment_icon_leftmergin"
                android:src="@drawable/erweimashenqing" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
